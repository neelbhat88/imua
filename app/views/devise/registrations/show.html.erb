<h1>Welcome, <%= "#{current_user.first_name} #{current_user.last_name}!" %> </h1>
<% if current_user.avatar_file_name.blank? %>
  <h2>Add your Profile Picture</h2>
  <center>
    <%= form_for @user, :url => user_path, :html => { :multipart => true } do |form| %>
      <%= form.file_field :avatar %><br />
      <p>
        <%= form.submit "Update Picture", :class => 'btn btn-primary mm' %>
      </p>
    <% end %>
  </center>
<% else %>
  <center><%= image_tag @user.avatar.url(:original) %></center>
<% end %>
