                    <% end %> 
                </ul>
            </div>   
        </div>     
    </div><!-- .ribbon -->
   
    <div class="ribbon PDU clear">
        <div class="left">   
            <div class="status">
                <h4>PDU</h4>
                <h1><%= @dataModel[:StudentDashboard].total_pdus %></h1>
