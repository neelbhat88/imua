                        </div>                        
                    </li>
                    <% end %> 
                </ul>
            </div>
        </div>   
    </div><!-- .ribbon -->
   
    <div class="ribbon service clear">   
        <div class="left">   
            <div class="status">
                <h4>Service</h4>
                <h1><%= @dataModel[:StudentDashboard].total_hours %></h1>
                <h4>Hours</h4>

                <div class="button">
