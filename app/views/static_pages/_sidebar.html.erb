<div id="sidebar pull-right">
	<div class="user-action">
		<%= link_to 'Login', user_registration_path %>
		<%= link_to 'Donate now', '#' %>
	</div>
	<div class="logo">
		<%= link_to root_path do %>
			<%= image_tag 'wcsf-logo-text.png' %>
		<% end %>
	</div>
	<div class="navigation">
		<ul>
			<li><%= link_to 'What is the WSCF?' %></li>
			<li><%= link_to 'Our Students' %></li>
			<li><%= link_to 'Community Partners' %></li>
			<li><%= link_to 'Who are our Donors' %></li>
			<li><%= link_to 'Donate Now' %></li>
			<li><%= link_to 'Calandar' %></li>
			<li><%= link_to 'Apply Now' %></li>
			<li><%= link_to 'Resources' %></li>
			<li><%= link_to 'Contact us' %></li>
		</ul>
	</div>
	<div class="sign-in">
		<%= form_for("user", :url => user_session_path) do |f| %>
		  <%= f.label :email %>
		  <%= f.email_field :email, :autofocus => true %>

		  <%= f.label :password %>
		  <%= f.password_field :password %>

	    <%= f.check_box :remember_me %> <%= f.label :remember_me %>

		  <%= f.submit "Sign in" %>
		<% end %>
	</div>
</div>