<% @jsinit = 'Badges' %>

<div class="leftPane" style="width: 150px; position: fixed;"></div>

<div style="margin-left: 150px; padding: 20px; position: relative">
	<div class="badgesEarnedBar" style="border-radius: 8px; background-color: #16a085; color: white; top: 40px; height: 100px; left: -110px; position: relative;">
		<span style="position: absolute; top: 40px; left: 20px; font-size: 100px; height: 100%;" data-bind="text: badgesEarned()"></span>
		<span style="top: 50px; font-size: 60px; height: 100%; left: 100px; position: absolute; font-weight: 100;">Badges Earned</span>
		<div style="position: absolute; right: 30px; top: 42px; width: 150px;">
			<select data-bind="options:$root.semesters, optionsText:'text', optionsValue:'id', value: semester" style="font-size: 16px; color: #16a085"></select>
		</div>		
	</div>

	<div style="position: relative; top: 60px; padding: 10px 30px;">
		<div class="requiredBadgesPanel" style="border-radius: 8px; padding-bottom: 40px;">
			<div class="badgePanelTitle" style="text-align: center; background-color: #2c3e50; border-radius: 3px 3px 0px 0px; color: white; height: 35px; font-size: 32px; padding: 15px 0px 0px;">
				Required Badges
			</div>
			<div class="badgePanelBadges" style="border: 1px solid #2c3e50; text-align: center;" data-bind="foreach: { data: badges, as: 'badge' }">
				<!-- The following is used by KO -->
				<!-- ko if: badge.isminrequirement() == true -->	
				<div class="globalBadge" data-bind="css: getBadgeColor(badge)">
					<span data-bind="text: badge.title(), css: {required: badge.isminrequirement}" style="font-size: 28px"></span>				
					<div data-bind="text: badge.description()" style="font-size: 15px;"></div>
				</div>		
				<!-- /ko -->
			</div>
		</div>

		<div class="otherBadgesPanel" style="border-radius: 8px; padding-bottom: 40px;">
			<div class="badgePanelTitle" style="text-align: center; background-color: #7f8c8d; border-radius: 3px 3px 0px 0px; color: white; height: 35px; font-size: 32px; padding: 15px 0px 0px;">
				All Other Badges
			</div>
			<div class="badgePanelBadges" style="border: 1px solid #7f8c8d; text-align: center;" data-bind="foreach: { data: badges, as: 'badge' }">
				<!-- The following is used by KO -->
				<!-- ko if: badge.isminrequirement() == false -->	
				<div class="globalBadge" data-bind="css: getBadgeColor(badge)" style="">
					<span data-bind="text: badge.title(), css: {required: badge.isminrequirement}" style="font-size: 28px"></span>				
					<div data-bind="text: badge.description()" style="font-size: 15px;"></div>
				</div>		
				<!-- /ko -->
			</div>
		</div>
	</div>
</div>
