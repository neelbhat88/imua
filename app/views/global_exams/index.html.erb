<% @jsinit = 'GlobalExams' %>

<div style="padding:20px">
  <h1>Add Global Exams (Seen by all schools)</h1>

  <table>
    <tr>
      <th>Exam Id</th>
      <th>Name</th>
      <th>Type</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @global_exams.each do |global_exam| %>
    <tr>
      <td><%= global_exam.id %></td>
      <td><%= global_exam.name %></td>
      <td><%= global_exam.exam_type %></td>      
      <td><%= link_to 'Edit', edit_global_exam_path(global_exam) %></td>
      <td><%= link_to 'Destroy', global_exam, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'New Global Exam', new_global_exam_path %>
</div>
